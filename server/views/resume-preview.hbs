<head>
	<meta charset='UTF-8' />
	<meta http-equiv='X-UA-Compatible' content='IE=edge' />
	<meta name='viewport' content='width=device-width, initial-scale=1.0' />
	<title>{{title}}</title>

	<link rel='shortcut icon' href='../../images/logo.ico' type='image/x-icon' />

	<link rel='stylesheet' href='../../stylesheets/cv-preview.css' />
	<link rel='stylesheet' href='../../stylesheets/style.css' />

	<link
		href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
		rel='stylesheet'
		integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
		crossorigin='anonymous'
	/>
	<link
		rel='stylesheet'
		href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css'
		integrity='sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=='
		crossorigin='anonymous'
		referrerpolicy='no-referrer'
	/>

</head>
<body>
	<!-- Header -->
	<header>
		<nav class='navbar navbar-expand-md navbar-light'>
			<div class='container'>
				<a class='navbar-brand' href='/user-main'><span
						class='logoTitleHeader'
					><img src='../../images/logo.svg' alt='logo' /></span></a>
				<button
					class='navbar-toggler'
					type='button'
					data-bs-toggle='collapse'
					data-bs-target='#navbarSupportedContent'
					aria-controls='navbarSupportedContent'
					aria-expanded='false'
					aria-label='Toggle navigation'
				>
					<span class='navbar-toggler-icon'></span>
				</button>
				<div class='collapse navbar-collapse' id='navbarSupportedContent'>
					<ul class='navbar-nav ms-auto'>
						<li class='nav-item ms-3 mb-2 mb-lg-0'>
							<a
								class='nav-link'
								href='/resume-preview/{{user._id}}'
								aria-current='page'
							><b>Edit resume</b></a>
						</li>
						<li class='nav-item ms-3 mb-2 mb-lg-0'>
							<a class='nav-link' href='/user-profile' aria-current='page'><b
								>Profile</b></a>
						</li>
						<li class='nav-item ms-3 mb-2 mb-lg-0'>
							<a href='/' class='signOut btn btn-primary'>Sign Out</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<!-- Header -->

	<div class='container input-form'>
		<form method='post' autocomplete='off'>
			<div class='row'>
				<div class='col-md-4 mb-3'>
					<label for='name' class='form-label'>First name</label>
					<input
						placeholder='{{user.first_name}}'
						disabled='true'
						id='first-name'
						name='firstName'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-4 mb-3'>
					<label for='last-name' class='form-label'>Last name</label>
					<input
						placeholder='{{user.last_name}}'
						disabled='true'
						id='last-name'
						name='lastName'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-4 mb-3'>
					<label for='gender' class='form-label'>Gender</label>
					<input
						placeholder='{{user.gender.key}}'
						disabled='true'
						id='gender'
						name='gender'
						type='text'
						class='form-control'
					/>
				</div>
			</div>
			<div class='row'>
				<div class='col-md-4 mb-3'>
					<label for='email' class='form-label'>E-mail</label>
					<input
						id='email'
						name='email'
						placeholder='{{user.email}}'
						disabled='true'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-4 mb-3'>
					<label for='phone' class='form-label'>Phone number</label>
					<input
						id='phone'
						name='phone'
						placeholder='{{user.phone_number}}'
						disabled='true'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-4 mb-3'>
					<label for='country' class='form-label'>Country</label>
					<input
						id='country'
						name='country'
						placeholder='{{user.country.name}}'
						disabled='true'
						type='text'
						class='form-control'
					/>
				</div>
			</div>
			<div class='row'>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>About
						<span class='small-text'></span></label>
					<textarea
						id='about'
						name='about'
						rows='4'
						class='form-control'
					>{{resume.about}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Education
						<span class='small-text'>(separated by semicolon)</span></label>
					<textarea
						id='education'
						name='education'
						rows='2'
						type='text'
						class='form-control'
					>{{resume.education}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Experience
						<span class='small-text'>(separated by semicolon)</span></label>
					<textarea
						id='experience'
						name='experience'
						rows='2'
						type='text'
						class='form-control'
					>{{resume.experience}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Projects
						<span class='small-text'>(separated by semicolon)</span></label>
					<textarea
						id='projects'
						name='projects'
						rows='2'
						type='text'
						class='form-control'
					>{{resume.projects}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Skills
						<span class='small-text'>(separated by semicolon)</span></label>
					<textarea
						id='skills'
						name='skills'
						rows='2'
						type='text'
						class='form-control'
					>{{resume.skills}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Other
						<span class='small-text'>(separated by semicolon)</span></label>
					<textarea
						id='other'
						name='other'
						rows='2'
						type='text'
						class='form-control'
					>{{resume.other}}</textarea>
				</div>
				<div class='col-md-12'>

					<!-- <a id="generateResume" href="/post-resume/{{user._id}}" type="submit" class="submit btn btn-primary">Generate CV</a> -->
					<button type='submit' class='submit btn btn-primary'>Generate CV</button>
				</div>
			</div>
		</form>
	</div>

	<div class='preview-boxes container'>
		<div class='container'>
			<div class='row cv-preview-box-1'>
				<div class='col-md-6 poster-contact'>
					<div>
						<p>Name</p>
						<h4>{{user.first_name}} {{user.last_name}}</h4>
					</div>
					<div>
						<p>Gender</p>
						<h4>{{user.gender.key}}</h4>
					</div>
					<div>
						<p>Email</p>
						<h4>{{user.email}}</h4>
					</div>
					<div>
						<p>Phone number</p>
						<h4>{{user.phone_number}}</h4>
					</div>
					<div>
						<p>Country</p>
						<h4>{{user.country.name}}</h4>
					</div>
				</div>
				<div class='col-md-6 cv-preview-box-2'>
					<div class='col-md-12 mb-3'>
						<label id='About' class='form-label'><strong>About</strong></label>
						<p>{{user.resume.about}}</p>
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Education</strong></label>
						{{#each user.resume.education as |school|}}
							<p>{{school.description}}</p>
						{{/each}}
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Experience</strong></label>
						{{#each user.resume.experience as |experience|}}
							<p>{{experience.title}}</p>
						{{/each}}
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Projects</strong></label>
						{{#each user.resume.projects as |project|}}
							<p>{{project.name}}</p>
						{{/each}}
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Skills</strong></label>
						{{#each user.resume.skills as |skill|}}
							<p>{{skill.name}}</p>
						{{/each}}
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Other</strong></label>
						{{#each user.resume.other1 as |other|}}
							<p>{{other.description}}</p>
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</div>

	<footer>
		<a href='../main/user-main.html'>
			<span class='logoTitleFooter'><img
					src='../../images/logo.svg'
					alt='logo'
				/></span></a>
		&copy;2021
	</footer>
	<script src='./scripts/resume-preview.js' defer></script>
</body>