<head>
	<meta charset='UTF-8' />
	<meta http-equiv='X-UA-Compatible' content='IE=edge' />
	<meta name='viewport' content='width=device-width, initial-scale=1.0' />
	<title>{{title}}</title>

	<link rel='shortcut icon' href='../../images/logo.ico' type='image/x-icon' />

	<link rel='stylesheet' href='../../stylesheets/job-preview.css' />
	<link rel='stylesheet' href='../../stylesheets/style.css' />

	<link
		href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
		rel='stylesheet'
		integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
		crossorigin='anonymous'
	/>
	<link
		rel='stylesheet'
		href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css'
		integrity='sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=='
		crossorigin='anonymous'
		referrerpolicy='no-referrer'
	/>
</head>
<body>
	<!-- Header -->
	<header>
		<nav class='navbar navbar-expand-md navbar-light'>
			<div class='container'>
				<a class='navbar-brand' href='/company-main'><span
						class='logoTitleHeader'
					><img src='../../images/logo.svg' alt='logo' /></span></a>
				<button
					class='navbar-toggler'
					type='button'
					data-bs-toggle='collapse'
					data-bs-target='#navbarSupportedContent'
					aria-controls='navbarSupportedContent'
					aria-expanded='false'
					aria-label='Toggle navigation'
				>
					<span class='navbar-toggler-icon'></span>
				</button>
				<div class='collapse navbar-collapse' id='navbarSupportedContent'>
					<ul class='navbar-nav ms-auto'>
						<li class='nav-item ms-3 mb-2 mb-lg-0'>
							<a
								class='nav-link'
								href='/job-preview/{{user._id}}/{{jobID}}'
								aria-current='page'
							><b>Edit job offers</b></a>
						</li>
						<li class='nav-item ms-3 mb-2 mb-lg-0'>
							<a class='nav-link' href='/company-profile' aria-current='page'><b
								>Profile</b></a>
						</li>
						<li class='nav-item ms-3 mb-2 mb-lg-0'>
							<a href='/' class='signOut btn btn-primary'>Sign Out</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<!-- Header -->

	<div class='container input-form'>
		<form method='post' autocomplete='off'>
			<div class='row'>
				<div class='col-md-6 mb-3'>
					<label for='company-name' class='form-label'>Company name</label>
					<input
						id='company-name'
						disabled='true'
						placeholder='{{user.username}}'
						name='username'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-6 mb-3'>
					<label for='email' class='form-label'>E-mail</label>
					<input
						id='email'
						name='email'
						placeholder='{{user.email}}'
						disabled='true'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-6 mb-3'>
					<label for='country' class='form-label'>Country</label>
					<input
						id='country'
						name='country'
						placeholder='{{user.country.name}}'
						disabled='true'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-6 mb-3'>
					<label for='phone' class='form-label'>Phone</label>
					<input
						id='phone'
						name='phone'
						placeholder='{{user.phone_number}}'
						disabled='true'
						type='text'
						class='form-control'
					/>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Job title
						<span class='small-text'></span></label>
					<textarea
						id='title'
						name='title'
						rows='1'
						type='text'
						class='form-control'
					>{{job.title}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Job description
						<span class='small-text'></span></label>
					<textarea
						id='description'
						name='description'
						rows='5'
						type='text'
						class='form-control'
					>{{job.description}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Job expectations
						<span class='small-text'>(separated by semicolon)</span></label>
					<textarea
						id='expectations'
						name='expectations'
						rows='5'
						type='text'
						class='form-control'
					>{{job.expectations}}</textarea>
				</div>
				<div class='col-md-12 mb-3'>
					<label for='contact-info' class='form-label'>Other
						<span class='small-text'></span></label>
					<textarea
						id='other'
						name='other'
						rows='5'
						type='text'
						class='form-control'
					>{{job.other}}</textarea>
				</div>
				<div class='col-md-12'>
					<!-- <a id="generateJob" href="/post-job/{{user._id}}/{{jobID}}" type="button" class="btn btn-primary">Generate job offer</a> -->
					<button type='submit' class='submit btn btn-primary'>Generate job
						offer</button>
				</div>
			</div>
		</form>
	</div>

	<div class='preview-boxes container'>
		<div class='container'>
			<div class='row job-preview-box-1'>
				<div class='col-md-6 poster-contact'>
					<div>
						<p>Company name</p>
						<h4>{{user.username}}</h4>
					</div>
					<div>
						<p>Email</p>
						<h4>{{user.email}}</h4>
					</div>
					<div>
						<p>Phone number</p>
						<h4>{{user.phone_number}}</h4>
					</div>
					<div>
						<p>Country</p>
						<h4>{{user.country.name}}</h4>
					</div>
				</div>
				<div class='col-md-6 job-preview-box-2'>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Title</strong></label>
						<p>{{jobOffer.title}}</p>
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Description</strong></label>
						<p>{{jobOffer.description}}</p>
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Expectations</strong></label>
						{{#each jobOffer.expectations as |expectation|}}
							<p>{{expectation}}</p>
						{{/each}}
					</div>
					<div class='col-md-12 mb-3'>
						<label class='form-label'><strong>Other</strong></label>
						<p>{{jobOffer.other}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<footer>
		<a href='../main/company-main.html'>
			<span class='logoTitleFooter'><img
					src='../../images/logo.svg'
					alt='logo'
				/></span></a>
		&copy;2021
	</footer>
</body>